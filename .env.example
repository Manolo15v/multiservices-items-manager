# =============================================
# Multi-Service Inventory Manager Configuration
# =============================================
# Copy this file to .env and update the values

# =============================================
# DATABASE CONFIGURATION
# =============================================
POSTGRES_DB=inventory_manager
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@db:5432/inventory_manager

# =============================================
# AUTH SERVICE (FastAPI - Python)
# =============================================
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Email Configuration (for verification/reset codes)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-password

# =============================================
# PRODUCTS SERVICE (Laravel - PHP)
# =============================================
APP_NAME="Products Service"
APP_ENV=local
APP_KEY=base64:xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx=
APP_DEBUG=true
APP_URL=http://localhost:8002

DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=inventory_manager
DB_USERNAME=postgres
DB_PASSWORD=postgres

# =============================================
# INVENTORY SERVICE (Rust)
# =============================================
RUST_LOG=info
HOST=0.0.0.0
PORT=8003

# =============================================
# FRONTEND (Vue.js)
# =============================================
VITE_AUTH_SERVICE_URL=http://localhost:8001
VITE_PRODUCTS_SERVICE_URL=http://localhost:8002
VITE_INVENTORY_SERVICE_URL=http://localhost:8003
